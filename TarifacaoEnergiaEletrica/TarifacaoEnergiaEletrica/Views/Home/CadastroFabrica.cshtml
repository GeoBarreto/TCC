@model TarifacaoEnergiaEletrica.Models.Fabrica
@{
    ViewBag.Title = "Cadastro de Fabrica";
}

<h2>
    CadastroFabrica
</h2>

@using (Html.BeginForm("CadastroFabrica", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken() //prevenção contra CSRF
    @Html.ValidationSummary(true)

    if (@ViewBag.Message != null)
    {
        <div style="border:1px solid red">
            @ViewBag.Message
        </div>
    }
    <table>
        <tr>
            <td>@Html.LabelFor(Model => Model.CNPJ)</td>
            <td>@Html.TextBoxFor(Model => Model.CNPJ)</td>
            <td>@Html.ValidationMessageFor(Model => Model.CNPJ)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.Endereco)</td>
            <td>@Html.TextBoxFor(Model => Model.Endereco)</td>
            <td>@Html.ValidationMessageFor(Model => Model.Endereco)</td>
        </tr>
        <tr>
            <td>@Html.Label("Distribuidora")</td>
            <td>@Html.DropDownList("distribuidoras", String.Empty)</td>

        </tr>
        <tr>
            <td><input type="submit" value="Salvar" /></td>
        </tr>
    </table>
}